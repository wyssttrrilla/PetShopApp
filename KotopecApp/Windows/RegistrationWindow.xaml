<Window x:Class="KotopecApp.Windows.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KotopecApp.Windows"
        mc:Ignorable="d"
        Title="RegistrationWindow" Height="398.263" Width="275" Background="AntiqueWhite">
    <Grid>
        <StackPanel>
            <TextBlock Text="Name" TextAlignment="Center"/>
            <TextBox x:Name="TBName" Margin="5"/>
            <TextBlock Text="Surname" TextAlignment="Center"/>
            <TextBox x:Name="TBSurname" Margin="5"/>
            <TextBlock Text="Patronymic" TextAlignment="Center"/>
            <TextBox x:Name="TBPatronymic" Margin="5"/>
            <TextBlock Text="Login" TextAlignment="Center"/>
            <TextBox x:Name="TBLogin" Margin="5"/>
            <TextBlock Text="Password" TextAlignment="Center"/>
            <TextBox x:Name="TBPassword" Margin="5"/>
            <TextBlock Text="Confirm Password" TextAlignment="Center"/>
            <TextBox x:Name="TBConfirmPassword" Margin="5"/>
            <ComboBox x:Name="CBRole" DisplayMemberPath="NameRole" Margin="5"/>
            <Button x:Name="BSave" Click="BSave_Click" Content="Добавить" Margin="5"/>

        </StackPanel>
    </Grid>
</Window>
