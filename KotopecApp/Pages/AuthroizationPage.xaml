<Page x:Class="KotopecApp.Pages.AuthroizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KotopecApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Kotopes App" Background="CadetBlue">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Margin="5" Height="100"/>
            <TextBlock Text="Login" TextAlignment="Center"/>
            <TextBox x:Name="TBLogin" Width="150" Margin="5"/>
            <TextBlock Text="Password" TextAlignment="Center"/>
            <PasswordBox x:Name="PBPassword" Width="150" Margin="5"/>
            <WrapPanel>
                <Button Width="75" x:Name="BAuthorization" Click="BAuthorization_Click" Content="Authorize" Margin="5"/>
                <Button Width="75" x:Name="BRegistration" Click="BRegistration_Click" Content="Registration" Margin="5"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Page>
